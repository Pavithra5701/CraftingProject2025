@{
    ViewBag.Title = "Craft Details";
    string craft = ViewBag.CraftName as string;
    int price = 100;

    if (craft == "Paper Craft")
    {
        price = 120;
    }
    else if (craft == "Bottle Craft")
    {
        price = 150;
    }
    else if (craft == "Fiber Craft")
    {
        price = 180;
    }
    else if (craft == "Clay")
    {
        price = 200;
    }
    else if (craft == "Basket Weaving")
    {
        price = 220;
    }
    else if (craft == "Teddy Bear Making")
    {
        price = 250;
    }
}

<style>
    body {
        font-family: 'Times New Roman', Times, serif;
    }

    .material-section {
        margin: 20px;
    }

        .material-section img {
            width: 250px;
            height: 200px;
            margin-right: 15px;
            border-radius: 10px;
            box-shadow: 2px 2px 8px #888;
        }

    .buy-btn {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        font-size: 18px;
    }

        .buy-btn:hover {
            background-color: #45a049;
        }

    .popup-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.6);
        display: none;
        justify-content: center;
        align-items: center;
    }

    .popup {
        background: #fff;
        width: 50%;
        padding: 30px;
        border-radius: 15px;
        position: relative;
    }

        .popup h3 {
            text-align: center;
            margin-bottom: 20px;
        }

        .popup label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
        }

        .popup input, .popup textarea {
            width: 100%;
            padding: 8px;
            margin-bottom: 15px;
            border-radius: 8px;
            border: 1px solid #ccc;
        }

        .popup button {
            padding: 10px 20px;
            margin-right: 10px;
            border-radius: 8px;
            cursor: pointer;
        }

    .close-btn {
        position: absolute;
        top: 15px;
        right: 15px;
        background: #ff4d4d;
        color: white;
        border: none;
        border-radius: 50%;
        font-size: 18px;
        width: 35px;
        height: 35px;
        cursor: pointer;
    }

    .order-confirm {
        margin-top: 15px;
        font-weight: bold;
        color: green;
        text-align: center;
    }

    .error {
        color: red;
        font-size: 14px;
        margin-bottom: 10px;
        text-align: center;
    }
</style>

<script>
    function openPopup() {
      document.getElementById('orderPopup').style.display = 'flex';
    }

    function closePopup() {
      clearForm();
      document.getElementById('orderPopup').style.display = 'none';
    }

     function clearForm() {
            document.getElementById('custName').value = '';
            document.getElementById('custMobile').value = '';
            document.getElementById('custAddress').value = '';
            document.getElementById('qrSection').style.display = 'none';
            document.getElementById('orderStatus').innerHTML = '';
            document.getElementById('errorMsg').innerHTML = '';
        }

                function validateForm() {
            let name = document.getElementById('custName').value.trim();
            let mobile = document.getElementById('custMobile').value.trim();
            let address = document.getElementById('custAddress').value.trim();
            let error = "";

            if (name === "" || mobile === "" || address === "") {
                error = "All fields are required!";
            } else if (!/^\d{10}$/.test(mobile)) {
                error = "Mobile number must be 10 digits!";
            }

            document.getElementById('errorMsg').innerText = error;
            return error === "";
        }


        function paymentStatus(status) {
            if (status === 'Paid') {
                document.getElementById('orderStatus').innerText = 'Order Confirmed (Payment Successful)';
                sendWhatsApp('Paid');
            } else {
                document.getElementById('orderStatus').innerText = 'Order Confirmed. Our admin will contact you.';
                sendWhatsApp('Not Paid');
            }
            setTimeout(closePopup, 3000);
        }

        function sendWhatsApp(paymentMode) {
            let name = document.getElementById('custName').value.trim();
            let mobile = document.getElementById('custMobile').value.trim();
            let address = document.getElementById('custAddress').value.trim();
            let amount = document.getElementById('craftPrice').value;

            let message = `Order Details:%0AName: ${name}%0AMobile: ${mobile}%0AAddress: ${address}%0APayment Mode: ${paymentMode}%0AAmount: : ${amount}`;

            // WhatsApp API Call (uncomment if you want redirection)
            window.open('https://wa.me/9361024739?text=' + message, '_blank');
        }


    function validateMobile() {
        let mobileInput = document.getElementById("custMobile");
        let errorDiv = document.getElementById("errorMsg");

        if (!/^\d{10}$/.test(mobileInput.value)) {
            errorDiv.style.display = "block";
            errorDiv.innerText = "Please enter a valid 10-digit mobile number.";
        } else {
            errorDiv.style.display = "none";
        }
    }

    function placeOrder(paymentType) {
        let name = document.getElementById("custName").value.trim();
        let mobile = document.getElementById("custMobile").value.trim();
        let address = document.getElementById("custAddress").value.trim();

        if (name === "" || mobile === "" || address === "") {
            document.getElementById("errorMsg").innerText = "All fields are required.";
            document.getElementById("errorMsg").style.display = "block";
            return;
        }

        let orderData = {
            Name: name,
            Mobile: mobile,
            Address: address,
            PaymentType: paymentType,
            CraftName: "@ViewBag.CraftName"
        };

        fetch('/Home/PlaceOrder', {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(orderData)
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert("Order placed successfully!");
                closePopup();
            } else {
                alert("Failed to place order.");
            }
        })
        .catch(error => console.error("Error:", error));
    }

    function cashOnDelivery() {
        placeOrder("Cash on Delivery");
    }

    function onlinePayment() {
        document.getElementById("qrSection").style.display = "block";
    }


</script>


